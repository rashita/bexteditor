{
  "name": "bexteditor",
  "version": "1.0.0",
  "productName": "BextEditor",
  "description": "BextEditor - a minimal markdown app",
  "main": "main.js",
  "scripts": {
    "start": "esbuild renderer.js --bundle --outfile=dist/bundle.js --platform=browser --sourcemap && electron .",
    "build": "esbuild renderer.js --bundle --outfile=dist/bundle.js --platform=browser --minify=true --sourcemap && electron-builder --mac --arm64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "kurashita tadanori",
  "license": "ISC",
  "build": {
    "productName": "BextEditor",
    "appId": "com.bext.editor",
    "mac": {
      "target": [
        "dmg"
      ],
      "extendInfo": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "Markdown Document",
            "CFBundleTypeExtensions": ["md", "markdown"],
            "CFBundleTypeRole": "Editor",
            "CFBundleTypeIconFile": "document.icns"
          },
          {
            "CFBundleTypeName": "Text Document", 
            "CFBundleTypeExtensions": ["txt", "text"],
            "CFBundleTypeRole": "Editor",
            "CFBundleTypeIconFile": "document.icns"
          }
        ]},
      "identity": null
    },
    "protocols": {
      "name": "myApp IM URL",
      "schemes": [
        "bext-editor"
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "dist/bundle.js",
      "build/"
    ]
  },
  "type": "commonjs",
  "devDependencies": {
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.6"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.3.3",
    "@codemirror/language-data": "^6.5.1",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.0",
    "codemirror": "^6.0.2",
    "commander": "^14.0.0",
    "electron-log": "^5.4.1"
  }
}
